    <div class="search-section">
        <div class="search-box">
            <h3 class="text-center mb-4">Buscar Paciente</h3>

            @using (Html.BeginForm("ResultadoBusca", "Pacientes", FormMethod.Post))
            {
                <div class="position-relative mb-4">
                    <i class="fa fa-search search-icon"></i>
                    <input type="text" name="filtro" class="form-control search-input"
                           placeholder="Digite nome, CPF ou telefone do paciente" autocomplete="off" />
                </div>

